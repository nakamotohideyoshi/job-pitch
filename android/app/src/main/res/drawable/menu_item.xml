<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="-2px"
        android:right="-2px"
        android:top="-2px">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="#10ffffff" />
        </shape>
    </item>

    <item
        android:left="-2px"
        android:right="-2px"
        android:bottom="1dp"
        android:top="-2px">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="#19000000" />
        </shape>
    </item>

</layer-list>