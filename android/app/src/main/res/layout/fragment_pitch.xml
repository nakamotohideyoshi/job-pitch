<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myjobpitch.fragments.PitchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/fragment_vertical_margin"
        android:paddingLeft="@dimen/fragment_horizontal_margin"
        android:paddingRight="@dimen/fragment_horizontal_margin"
        android:paddingTop="@dimen/fragment_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:text="Record your up to 30 sec selfie video. The key is to just be yourself! You can record on your phone pretty much anywhere, at home on the bus or in a coffee shop it doesnâ€™t matter, and you can re-record as many times as you want."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/default_fontsize"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check out our "
                android:textSize="@dimen/default_fontsize"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/example_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example video"
                android:textSize="@dimen/default_fontsize"
                android:textStyle="bold"
                android:textColor="@color/greenColor"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dddddd"
                android:scaleType="centerCrop"
                android:id="@+id/image_preview"/>
            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_play"
                android:visibility="gone"/>
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:theme="@style/ProgressBar"
                android:visibility="gone"
                style="?android:attr/progressBarStyleSmall"/>
        </FrameLayout>

        <Button
            android:text="Record New Pitch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_yellow"
            android:theme="@style/Button"
            android:id="@+id/new_record"/>

        <Button
            android:text="Upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_green"
            android:theme="@style/Button"
            android:id="@+id/upload_button"/>

        <TextView
            android:id="@+id/skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Record later"
            android:layout_gravity="center"
            android:textSize="@dimen/default_fontsize"
            android:textStyle="bold"
            android:textColor="@color/greenColor"/>

    </LinearLayout>

</FrameLayout>