<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Login page -->

    <style name="LoginInputView">
        <item name="colorControlNormal">#80ffffff</item>
        <item name="android:textColorHint">#40ffffff</item>
    </style>


    <!-- navigation view settings -->
    <!--<style name="NavigationTheme" parent="AppTheme">-->
    <!--<item name="android:listPreferredItemHeightSmall">45dp</item>-->
    <!--<item name="android:textSize">@dimen/default_fontsize</item>-->
    <!--</style>-->

    <style name="Button">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/large_fontsize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditText">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/default_fontsize</item>
        <item name="android:textColorHint">@color/greyLabel</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="CheckBox">
        <item name="colorAccent">@color/greenColor</item>
        <item name="android:textSize">@dimen/default_fontsize</item>
    </style>

    <style name="BoldLabel">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/label_fontsize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreyLabel">
        <item name="android:textColor">@color/greyLabel</item>
        <item name="android:textSize">@dimen/label_fontsize</item>
    </style>

    <style name="SmallText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/small_fontsize</item>
    </style>

    <style name="DefaultText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/default_fontsize</item>
    </style>

    <style name="LargeText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/large_fontsize</item>
    </style>

    <style name="XLargeText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/xlarge_fontsize</item>
    </style>

    <style name="LinkButton">
        <item name="android:textColor">@color/linkButton</item>
        <item name="android:textSize">@dimen/label_fontsize</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">@color/greenColor</item>
    </style>


    <!-- button, link -->

    <style name="BaseButton">
        <item name="android:minHeight">40dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="GreenButton" parent="BaseButton">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="YellowButton" parent="BaseButton">
        <item name="android:background">@drawable/button_yellow</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="GrayButton" parent="BaseButton">
        <item name="android:background">@drawable/button_grey</item>
    </style>

    <style name="BaseLink" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:minHeight">30dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenLink" parent="BaseLink">
        <item name="android:textColor">@color/greenColor</item>
    </style>

    <style name="YellowLink" parent="BaseLink">
        <item name="android:textColor">@color/yellowColor</item>
    </style>

    <style name="LoginPageLink" parent="BaseLink">
        <item name="android:textColor">#80ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- label -->

    <style name="FormLabel">
        <item name="android:textColor">@color/greyColor</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
