<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.myjobpitch.fragments.PaymentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/business_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Business Name"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/colorGreen"/>

        <TextView
            android:id="@+id/business_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="0dp"/>

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/sku_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Purchase Type"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/colorGreen"/>

        <Button
            android:id="@+id/purchase_button"
            android:text="Purchase"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_green"
            android:theme="@style/Button"/>

        <Button
            android:id="@+id/subscribe_button"
            android:text="Subscribe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_yellow"
            android:theme="@style/Button"/>

        <TextView
            android:id="@+id/subscribe_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"/>

    </LinearLayout>

</ScrollView>


