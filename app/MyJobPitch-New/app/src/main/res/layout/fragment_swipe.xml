<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myjobpitch.fragments.SwipeFragment">

    <com.daprlabs.aaron.swipedeck.layouts.SwipeFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/job_title_view"
            layout="@layout/view_job_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:visibility="visible" />


        <com.daprlabs.aaron.swipedeck.SwipeDeck
            android:id="@+id/swipe_deck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            swipedeck:card_spacing="15dp"
            swipedeck:max_visible="3"
            swipedeck:preview_layout="@layout/view_swipe_card" />

        <TextView
            android:id="@+id/credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:textColor="@color/greyLabel"/>

        <include
            android:id="@+id/empty_view"
            layout="@layout/view_empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/nopitch_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your pitch video is missing!"
                    android:textColor="#222"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Recruiters are looking for someone with your exact profile.\nYou are the perfect candidate, let your personality shine and land you the job thet you really want!\n\nAll you're missing is your video pitch!"
                    android:textColor="#222"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/go_record_now"
                    android:text="Record now!"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_yellow"
                    android:theme="@style/Button"/>

            </LinearLayout>

        </FrameLayout>

    </com.daprlabs.aaron.swipedeck.layouts.SwipeFrameLayout>

</FrameLayout>
