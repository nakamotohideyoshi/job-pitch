<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <include
                    android:id="@+id/image_loader"
                    layout="@layout/view_image_loader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:id="@+id/right_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:rotation="-20">
                    <TextView
                        android:id="@+id/right_mark_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="CONNECT"
                        android:textColor="@color/colorGreen"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/apply_bg"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/left_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:rotation="20">
                    <TextView
                        android:id="@+id/left_mark_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="REMOVE"
                        android:textColor="#f75b25"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/remove_bg"/>
                </FrameLayout>

                <ImageView
                    android:id="@+id/touch_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/icon_touch"
                    android:scaleType="fitCenter"/>

            </FrameLayout>

            <TextView
                android:id="@+id/card_title"
                android:text="title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lines="1"
                android:textSize="20dp"
                android:textColor="@color/blackText"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/card_desc"
                android:text="description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:lines="1"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>