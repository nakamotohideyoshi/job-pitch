    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- navigation view settings -->
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:listPreferredItemHeightSmall">45dp</item>
        <item name="android:textSize">@dimen/default_fontsize</item>
    </style>

    <style name="Button">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/default_fontsize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditText">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/default_fontsize</item>
        <item name="android:textColorHint">@color/greyLabel</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="CheckBox">
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:textSize">@dimen/default_fontsize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldLabel">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/label_fontsize</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="GreyLabel">
        <item name="android:textColor">@color/greyLabel</item>
        <item name="android:textSize">@dimen/label_fontsize</item>
    </style>

    <style name="LinkButton">
        <item name="android:textColor">@color/linkButton</item>
        <item name="android:textSize">@dimen/label_fontsize</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">@color/colorGreen</item>
    </style>

</resources>
