<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myjobpitch" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MJPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/register"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.LoginActivity" />
        </activity>
        <activity
            android:name=".activities.CreateProfileActivity"
            android:label="@string/title_create_profile"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.LoginActivity" />
        </activity>
        <activity
            android:name=".activities.BusinessListActivity"
            android:label="@string/businesses"
            android:parentActivityName=".activities.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.LoginActivity" />
        </activity>
        <activity
            android:name=".activities.EditBusinessActivity"
            android:label="@string/edit_business"
            android:parentActivityName=".activities.BusinessListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.BusinessListActivity" />
        </activity>
        <activity
            android:name=".activities.LocationListActivity"
            android:label="@string/locations"
            android:parentActivityName=".activities.BusinessListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.BusinessListActivity" />
        </activity>
        <activity
            android:name=".activities.EditLocationActivity"
            android:label="@string/edit_location"
            android:parentActivityName=".activities.LocationListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.LocationListActivity" />
        </activity>
        <activity
            android:name=".activities.JobListActivity"
            android:label="@string/jobs"
            android:parentActivityName=".activities.LocationListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.LocationListActivity" />
        </activity>
        <activity
            android:name=".activities.EditJobActivity"
            android:label="@string/edit_job"
            android:parentActivityName=".activities.JobListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.JobListActivity" />
        </activity>
        <activity
            android:name=".activities.JobActivity"
            android:label="@string/job"
            android:parentActivityName=".activities.JobListActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.JobListActivity" />
        </activity>
        <activity
            android:name=".activities.ConversationListActivity"
            android:label="@string/messages">
        </activity>
        <activity
            android:name=".activities.ConversationThreadActivity"
            android:label="@string/message_thread"
            android:parentActivityName=".activities.ConversationListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ConversationListActivity" />
        </activity>
        <activity
            android:name=".activities.JobSeekerActivity"
            android:label="@string/title_activity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.LoginActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.LoginActivity" />
        </activity>
        <activity
            android:name=".activities.EditJobSeekerActivity"
            android:label="@string/title_activity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.JobSeekerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.JobSeekerActivity" />
        </activity>
        <activity
            android:name=".activities.EditJobProfileActivity"
            android:label="@string/title_activity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.JobSeekerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.JobSeekerActivity" />
        </activity>
        <activity
            android:name=".activities.SelectPlaceActivity"
            android:label="@string/title_activity_select_place" >
        </activity>

    </application>

</manifest>
