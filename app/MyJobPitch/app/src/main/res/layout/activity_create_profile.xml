<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CreateProfileActivity">

    <ImageView
        android:src="@drawable/background_logo"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ProgressBar android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/create_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/create_job_seeker"
                        android:src="@drawable/briefcase"
                        android:paddingTop="35dp"
                        android:paddingBottom="60dp"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceButton"
                        android:gravity="center|bottom"
                        android:paddingBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="@string/create_job_seeker" />
                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/create_employer"
                        android:paddingTop="35dp"
                        android:paddingLeft="45dp"
                        android:paddingRight="45dp"
                        android:paddingBottom="60dp"
                        android:src="@drawable/head"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceButton"
                        android:gravity="center|bottom"
                        android:paddingBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="@string/create_employer" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recruiter_profile"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fragment
                    android:name="com.myjobpitch.fragments.BusinessEditFragment"
                    android:id="@+id/business_edit_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_location_edit" />

                <fragment
                    android:name="com.myjobpitch.fragments.LocationEditFragment"
                    android:id="@+id/location_edit_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_business_edit" />

                <Button
                    style="@style/DefaultButtonPaint"
                    android:textColor="@drawable/accent_button_textcolor"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/action_continue"
                    android:id="@+id/continue_button_recruiter"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/job_seeker_profile"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:name="com.myjobpitch.fragments.JobSeekerEditFragment"
                    android:id="@+id/job_seeker_edit_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_job_seeker_edit" />

                <Button
                    style="@style/DefaultButtonPaint"
                    android:textColor="@drawable/accent_button_textcolor"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/action_continue"
                    android:id="@+id/continue_button_job_seeker"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
