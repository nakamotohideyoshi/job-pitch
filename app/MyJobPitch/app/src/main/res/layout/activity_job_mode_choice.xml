<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".JobModeChoiceActivity">

    <ImageView
        android:src="@drawable/background_logo"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/mode_choice"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/DefaultButtonPaint"
            android:textColor="@drawable/accent_button_textcolor"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:id="@+id/search_button"
            tools:text="@string/search"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp" />

        <Button
            style="@style/DefaultButtonPaint"
            android:textColor="@drawable/accent_button_textcolor"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:id="@+id/applications_button"
            tools:text="@string/applications"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp" />

        <Button
            style="@style/DefaultButtonPaint"
            android:textColor="@drawable/accent_button_textcolor"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:id="@+id/connections_button"
            tools:text="@string/connections"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp" />

    </LinearLayout>
</FrameLayout>
