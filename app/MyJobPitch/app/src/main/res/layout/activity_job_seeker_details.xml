<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.JobSeekerDetailsActivity">

    <ImageView
        android:src="@drawable/background_logo"
        android:layout_marginTop="200dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ProgressBar android:id="@+id/progress" style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:id="@+id/job_seeker_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/image_container"
                android:layout_height="180dp"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/image"
                    tools:src="@drawable/ic_star"
                    android:adjustViewBounds="true"
                    android:background="@android:color/darker_gray"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_height="fill_parent" />

                <ProgressBar
                    android:id="@+id/image_progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/no_image"
                    android:textColor="@color/grey_6"
                    android:text="@string/no_image"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView android:id="@+id/play_button"
                    android:src="@drawable/ic_action_play_over_video"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/job_seeker_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mjp_teal"
                    android:layout_toLeftOf="@+id/job_seeker_properties"
                    tools:text="Joe Bloggs"
                    android:textSize="25sp"
                    android:paddingBottom="8dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/job_seeker_properties"
                    android:layout_alignParentRight="true"
                    tools:text="29 male"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/job_seeker_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus et dictum augue. Pellentesque a aliquam felis. Aliquam dictum aliquet magna, sed lacinia ex vehicula et. Proin id neque nec ipsum suscipit tempus eget eget metus."
                    android:layout_below="@id/job_seeker_name" />

                <LinearLayout
                    android:id="@+id/contact_details"
                    android:layout_below="@id/job_seeker_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_details"
                        android:textColor="@color/mjp_teal"
                        android:textSize="20sp"
                        android:paddingTop="15dp"
                        android:paddingBottom="8dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/send_message_button"
                        android:text="@string/send_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/no_contact_details"
                        android:text="@string/contact_details_unavailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/job_seeker_mobile"
                        android:autoLink="phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/job_seeker_telephone"
                        android:autoLink="phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/job_seeker_email"
                        android:autoLink="email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/cv"
                    android:layout_below="@id/contact_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cv"
                        android:textColor="@color/mjp_teal"
                        android:textSize="20sp"
                        android:paddingTop="15dp"
                        android:paddingBottom="8dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/references_available"
                        android:text="@string/references_available_on_request"
                        android:paddingBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/cv_button"
                        android:gravity="center"
                        android:text="@string/download_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
