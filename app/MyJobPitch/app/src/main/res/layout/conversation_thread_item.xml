<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <TextView
        android:id="@+id/message"
        android:background="@color/message_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/icon_container"
        android:padding="6dp"
        android:layout_marginBottom="3dip"
        android:gravity="center_vertical"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus ligula nulla, auctor eu congue et, egestas eget nunc. Morbi rutrum libero at aliquet aliquet. Fusce finibus blandit porttitor." />

    <TextView
        android:id="@+id/meta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dip"
        tools:text="Jamie Cockburn, Today, 18:34"
        android:textStyle="italic"
        android:textSize="12sp" />

</LinearLayout>
