<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".JobProfileEditFragment">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/job_search_profile"
        android:textSize="25sp"
        android:paddingBottom="8dp"
        android:textStyle="bold" />

    <com.myjobpitch.widgets.NoDefaultSpinner
        android:prompt="@string/prompt_sectors"
        android:id="@+id/job_profile_sectors" android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.myjobpitch.widgets.NoDefaultSpinner
        android:prompt="@string/prompt_contract"
        android:id="@+id/job_profile_contract" android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.myjobpitch.widgets.NoDefaultSpinner
        android:prompt="@string/prompt_hours"
        android:id="@+id/job_profile_hours" android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
