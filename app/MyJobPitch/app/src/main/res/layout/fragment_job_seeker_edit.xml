<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".JobSeekerProfileFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="25sp"
            android:textColor="@color/mjp_teal"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:id="@+id/textView" />

        <CheckBox
            android:id="@+id/job_seeker_active"
            android:text="@string/active"
            android:checked="true"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0">

        <TableRow>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/public_data"
                android:layout_column="1" />
        </TableRow>

        <TableRow>
            <AutoCompleteTextView android:id="@+id/job_seeker_first_name" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="@string/prompt_job_seeker_first_name"
                android:inputType="text" android:maxLines="1"
                android:singleLine="true" />
            <CheckBox android:layout_gravity="right" android:enabled="false"
                android:checked="true" />
        </TableRow>

        <TableRow>
            <AutoCompleteTextView android:id="@+id/job_seeker_last_name" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="@string/prompt_job_seeker_last_name"
                android:inputType="text" android:maxLines="1"
                android:singleLine="true" />
            <CheckBox android:layout_gravity="right" android:enabled="false"
                android:checked="true" />
        </TableRow>

        <TableRow>
            <EditText android:id="@+id/job_seeker_email" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="@string/prompt_email"
                android:inputType="textEmailAddress" android:maxLines="1"
                android:singleLine="true" />
            <CheckBox
                android:id="@+id/job_seeker_email_public"
                android:checked="true"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow>
            <EditText android:id="@+id/job_seeker_telephone" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="@string/prompt_telephone"
                android:inputType="phone" android:maxLines="1"
                android:singleLine="true" />
            <CheckBox
                android:id="@+id/job_seeker_telephone_public"
                android:checked="true"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow>
            <EditText android:id="@+id/job_seeker_mobile" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="@string/prompt_mobile"
                android:inputType="phone" android:maxLines="1"
                android:singleLine="true" />
            <CheckBox
                android:id="@+id/job_seeker_mobile_public"
                android:checked="true"
                android:layout_gravity="right" />
        </TableRow>


        <TableRow>
            <EditText android:id="@+id/job_seeker_age" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="@string/prompt_age"
                android:inputType="number" android:maxLines="1"
                android:singleLine="true" />
            <CheckBox
                android:id="@+id/job_seeker_age_public"
                android:checked="true"
                android:layout_gravity="right" />
        </TableRow>


        <TableRow>
            <com.myjobpitch.widgets.NoDefaultSpinner
                android:prompt="@string/prompt_sex"
                android:id="@+id/job_seeker_sex" android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/job_seeker_sex_public"
                android:checked="true"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow>
            <com.myjobpitch.widgets.NoDefaultSpinner
                android:prompt="@string/prompt_nationality"
                android:id="@+id/job_seeker_nationality" android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/job_seeker_nationality_public"
                android:checked="true"
                android:layout_gravity="right" />
        </TableRow>

    </TableLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_cv"
        android:textColor="@color/mjp_teal"
        android:textSize="20sp"
        android:paddingTop="15dp"
        android:paddingBottom="8dp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            tools:text="Not set"
            android:id="@+id/textView3"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no_file_chosen" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="@color/mjp_teal"
        android:textSize="20sp"
        android:paddingTop="15dp"
        android:paddingBottom="8dp"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/job_seeker_description_hint"
        android:paddingBottom="8dp"
        android:paddingLeft="0dp"
        android:paddingRight="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/job_seeker_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_job_description"
        android:inputType="textMultiLine"
        android:maxLength="500" />

    <TextView
        android:id="@+id/job_seeler_description_character_count"
        tools:text="@string/characters_remaining"
        android:paddingLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/job_seeker_has_references"
        android:checked="false"
        android:text="@string/references_available"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <CheckBox
        android:id="@+id/tickbox"
        android:checked="false"
        android:text="@string/all_my_information"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

</LinearLayout>
